{
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "no-unused-vars": "warn",
    "react/jsx-curly-brace-presence": ["error", "never"],
    "react/self-closing-comp": "error"
  },
  "ignorePatterns": ["node_modules/", ".next/", "out/", "build/"]
}
